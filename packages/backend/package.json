{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@switchcraft-interview/shared-models": "1.0.0",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.11",
    "bunyan": "^1.8.15",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "yarn tsc -w --preserveWatchOutput & nodemon --watch 'dist/**/*' --exec node ./dist/src/dev.js",
    "build": "yarn tsc",
    "postinstall": "yarn build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    }
  }
}
